<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
			<h1>Dashboard</h1>
    </div>
    <div class="col-xs-12 col-md-6">
			<h2>Universes</h2>
			<ol>
				<% @universes.each do |u| %>
				<li><%= u.name %></li>
				<% end %>
			</ol>
    </div>
    <div class="col-xs-12 col-md-6">
			<h2>Admins and Coaches</h2>
			<ol>
				<% @users.each do |u| %>
				<li><%= "#{u.universe ? u.universe.name : "admin"} - #{u.first_name} #{u.last_name}" %></li>
				<% end %>
			</ol>
    </div>
  </div>
</div>